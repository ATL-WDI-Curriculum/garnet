<tr>
  <th></th>
  <th title="Average number of points">Average Points</th>
  <th title="Total entries">Total Entries</th>
  <th title="Percent that have a value of 2">Percent Perfect</th>
</tr>
<% users.each do |user| %>
<% next if !user %>
<% collection = user.send(datum) %>
<tr>
  <th><%= link_to user.username, group_membership_path(group, user) %></th>
  <td style="background-color:<%= color_of(collection) %>">
    <%= average_status(collection) %>
  </td>
  <td><%= collection.count %></td>
  <td><%= percent_of(collection, 2) %></td>
</tr>
<% end %>
