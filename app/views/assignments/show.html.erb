<h2>Assignment Details</h2>
<%= form_tag assignment_path(@assignment), method: :patch do %>
<%= render partial: "form", locals: {assignment: @assignment} %>
<% end %>

<section>
<h3>Submissions</h3>
<p><%= percent_of(@submissions, 2) %>% complete</p>
<button onclick="loadIssues('<%= assignment_issues_path(@assignment) %>')">Count issues</button>
<table>
  <% @submissions.each do |submission| %>
  <tr>
  <%= render partial: "submissions/row", locals: {submission: submission, enable: true} %>
  </tr>
  <% end %>
</table>
</section>
