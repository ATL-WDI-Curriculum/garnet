<td><%= link_to user.name || user.username, user_path(user) %></td>
<% if !@hide_pics %>
  <td>
    <% if user.image_url && !user.image_url.strip.blank? %>
      <%= avatar(user)  %>
    <% end %>
  </td>
<% end %>
<td>
  <% if user.github_id %>
    <%= link_to user.username, "http://github.com/#{user.username}" %>
  <% else %>
    <%= user.username %>
  <% end %>
</td>
<td><%= user.email || "No email" %></td>
