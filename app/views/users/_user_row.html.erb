<td>
  <% if @group && !@group.admins.include?(user) %>
  <%= link_to user.name || user.username, group_membership_path(@group, user) %>
  <% else %>
  <%= link_to user.name || user.username, user_path(user) %>
  <% end %>
</td>
<td><%= avatar(user) if user.image_url && !user.image_url.strip.blank? && !@hide_pics %></td>
<td><%= link_to user.username, "http://github.com/#{user.username}" %></td>
<td><%= user.email || "No email" %></td>
