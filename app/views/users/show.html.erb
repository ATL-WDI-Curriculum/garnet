<%= avatar(@user) %>
<h2><%= @user.username %></h2>
<p>User ID <%= @user.id %></p>
<% if @is_current_user %>
  <p>This is your profile.</p>
  <% if !@user.github_id %>
  <p><a href="/github/authorize">Link your Github account</a></p>
  <% end %>
  <p><%= link_to "Delete your account", profile_delete_path, data: {confirm: "You sure?"}, method: :delete %></p>
  <p>Soon: Change your password.</p>
<% end %>
