<div class='dashboard'>
  <h2><%= @group.title %> <%= breadcrumbs(@group) %></h2>
  <h2><%= link_to "Assignments", group_assignments_path(@group) %> </h2>
  <h2>
    <%= form_for [@group, @event] do |f| %>
      <%= f.submit :"Take today's attendance." %>
    <% end %>
  </h2>
  <h2><%= link_to "Students", group_students_path(@group) %></h2>
</div>
<ul><%= subgroup_tree_html(@group) %></ul>
<script charset="utf-8">
  $(".cohort-select").change(function(){
    var newGroupId =  $("option:selected").attr("value")
    location.href= "/groups/" + newGroupId
  })
</script>
<%= javascript_include_tag 'application' %>
