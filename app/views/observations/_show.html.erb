<div class="observation" style="background-color:<%= color_of(observation.status) %>">
  <p><strong><%= observation.status %>: <%= observation.body %></p>
  <p><small><%= link_to observation.user.username, group_membership_path(observation.group, observation.user) %>, by <%= link_to observation.admin.username, profile_path(observation.admin) %>,
    <%= observation.group.path %>,
    <span title="<%= observation.created_at.strftime("%a %m/%d/%y %r") %>">
      <%= time_ago_in_words(observation.created_at) %> ago</span></small></p>
</div>
